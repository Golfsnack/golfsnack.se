<div class="py-12">
  <h2 class="mb-2 text-lg font-semibold text-golfsnack-900">
    Visar <%= Club.count %> Golfklubbar
  </h2>
</div>
<table class="min-w-full divide-y divide-sand-200">
  <thead>
    <tr>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Namn
      </th>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Beskrivning
      </th>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Medlemmar
      </th>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Inl√§gg
      </th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-sand-200">
    <% @clubs.each do |club| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= link_to club.name, club %>
        </td>
        <td class="px-6 py-4">
          <%= club.description %>
        </td>
        <td class="px-6 py-4">
          <%= club.users.size %>
        </td>
        <td class="px-6 py-4">
          <%= club.posts.size %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @clubs %>
