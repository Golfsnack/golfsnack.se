<% @clubs.each do |club|%>
  <div class="grid w-full gap-4 pb-12 mb-12 border-b sm:grid-cols-2 md:grid-cols-5 border-wetsand-300">
    <img class="object-cover w-full" src="https://images.unsplash.com/photo-1580758852857-a243f4de9cc7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=80" alt="">
    <div class="col-span-3 md:border-r border-wetsand-200 md:pr-4">
      <div class="flex flex-col w-full title">
        <div class="flex">
          <%= link_to club do %>
            <h1 class="mr-2 uppercase"><%= club.name %></h1>
          <% end %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-8 h-8 text-yellow-500">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <h4>7,4</h4>
        </div>
        <strong class="mb-2">TROLLHÄTTAN</strong>
        <p><%= club.description %></p>
      </div>
    </div>
    <div>
      <h5>INFO</h5>
      <dl>
        <dt>Antal hål:</dt>
        <dd><%= club.courses.sum(&:holes_count) %></dd>
        <dt>Banor</dt>
        <dd><%= club.courses_count %></dd>
        <dt>Längd</dt>
        <dd>5300 m</dd>
      </dl>
    </div>
  </div>
<% end %>
