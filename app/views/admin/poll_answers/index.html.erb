<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <h1 class="text-xl font-extrabold">Resultat f√∂r "<%= @poll.name %>"</h1>
      <div class="overflow-hidden border-b shadow border-sand-200">
        <table class="min-w-full divide-y divide-sand-200">
          <thead>
            <tr>
              <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase text-sand-500 bg-sand-50">
                Val
              </th>
              <th>
                Antal svar
              </th>
              <th>
                Procent
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-sand-200">
            <% @poll_questions.each do |question| %>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <%= question.choice %>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <%= question.poll_answers.size %>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <% if question.poll_answers.size > 0 %>
                    <%= ((question.poll_answers.size.to_f  / @poll_answers.size.to_f) * 100).round %> %
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
