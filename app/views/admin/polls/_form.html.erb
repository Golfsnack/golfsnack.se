<div class="max-w-full min-w-full p-12 section">
  <ul>
    <% @poll.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_for [:admin, @poll], html: { multipart: true } do |f| %>
    <div class="my-12">
      <label class="font-bold">Rubrik</label>
      <%= f.text_field :name, class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900  focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
      <div class="p-12 my-12 border-t border-golfsnack-500">
        <label class="font-bold">Val</label>
        <%= f.fields_for :poll_questions do |builder| %>
          <div class="pb-4">
            <%= builder.hidden_field :id %>
            <%= builder.text_field :choice, class: "block w-full mb-2 px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900  focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
            <% if builder.object.persisted? %>
              <label class="text-xs">
                <%= builder.check_box :_destroy %> Radera val (OBS, Om ngn svarat på detta val tas detta svar bort!)
              </label>
            <% end %>
          </div>
        <% end %>
      </div>
      <label class="py-4 my-8">
        <%= f.check_box :archived  %> Arkivera omröstning (Går ej att svara på mer)
      </label>
    </div>
    <%= f.submit 'Spara omröstning', class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium text-white bg-rough-600 hover:bg-rough-500 focus:outline-none focus:border-rough-700 focus:shadow-outline-golfsnack active:bg-rough-700 transition duration-150 ease-in-out" %>
  <% end %>
</div>
