    <div class="col-span-2">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="col-span-2">
      <%= f.label :architect %>
      <%= f.text_field :architect %>
    </div>
    <div>
      <%= f.label :holes_count %>
      <%= f.text_field :holes_count %>
    </div>
    <div>
      <%= f.label :par %>
      <%= f.text_field :par %>
    </div>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, class: "w-full", rows: 5 %>
  </div>
