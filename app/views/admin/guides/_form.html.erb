<div class="max-w-full min-w-full p-12 section">
  <ul>
    <% @guide.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_for [:admin, @guide], html: { multipart: true } do |f| %>
    <label>Rubrik</label>
    <%= f.text_field :title, class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900  focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
    <div class="block w-full px-3 py-2 border field border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5">
      <%= image_tag @guide.image.variant(resize_to_fill: [640, 480], gravity: 'center') if @guide.image.attached? %>
      <%= f.label :image %><br />
      <%= f.file_field :image %>
    </div>
    <div class="my-12 control">
      <%= f.rich_text_area :body, class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900  focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
    </div>
    <%= f.submit 'Spara guide', class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium text-white bg-rough-600 hover:bg-rough-500 focus:outline-none focus:border-rough-700 focus:shadow-outline-golfsnack active:bg-rough-700 transition duration-150 ease-in-out" %>
  <% end %>
</div>
