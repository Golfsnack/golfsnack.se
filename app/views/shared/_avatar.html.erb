<% if user %>
  <%= link_to user do %>
    <% if user.avatar.attached? %>
      <%= image_tag user.avatar.variant(resize_to_fill: [60, 40], gravity: 'center'), class: 'small-avatar' %>
    <% else %>
      <%= image_tag "fallback/avatar-thumb-default.png", class: 'small-avatar' %>
    <% end %>
  <% end %>
<% end %>
