<div class="flex flex-row pt-4 pl-6 mt-4 border-t border-golfsnack-100">
  <%= render 'shared/avatar', user: comment.user  %>
  <div class="flex-col mt-1">
    <div class="flex flex-1 px-4 text-sm font-bold leading-tigh">
      <%= link_to comment.user.name, user_path(comment.user) %>
      <span class="self-end ml-2 text-xs font-normal text-golfsnack-500"><%= relative_time comment.created_at %> sedan</span>
    </div>
    <div class="flex-1 ml-4 text-sm font-medium leading-loose text-golfsnack-600">
      <%= comment.comment %>
    </div>
  </div>
</div>
