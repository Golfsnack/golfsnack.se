<footer class="w-full mt-12 font-mono text-golfsnack-700 bg-golfsnack-100">
  <div class="grid grid-cols-12 p-6 mx-auto">
    <div class="col-span-4">
      <a class="items-center font-medium text-golfsnack-900 title-font md:justify-start">
        <%= image_tag 'Golfsnack_Outline_Centrerad_Svart.png', alt: "Golfsnack", class: "inline-block w-24 h-auto" %>
      </a>
      <p class="mt-2 text-sm text-golfsnack-500">För golfare, Av golfare!</p>
    </div>
    <div class="col-span-8 text-right">
      <form action="<%= users_path%>" class="mb-4">
        <input type="search" name="query" placeholder="Sök golfare..."  class="p-2" />
      </form>
      <span class="inline-flex justify-center mt-2 sm:ml-auto sm:mt-0 sm:justify-start">
        <a class="cursor-pointer text-golfsnack-500 hover:text-golfsnack-700">
          <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
            <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"></path>
          </svg>
        </a>
        <a class="ml-3 cursor-pointer text-golfsnack-500 hover:text-golfsnack-700">
          <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
            <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01"></path>
          </svg>
        </a>
      </span>
    </div>
  </div>
</footer>
