<header class="h-16" id="header" x-data="{ mobileMenuOpen: false, profileMenuOpen: false }">
  <nav class="bg-golfsnack-500">
    <div class="px-2 mx-auto sm:px-6 lg:px-8">
      <div class="relative flex items-center justify-between h-16">
        <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
          <!-- Mobile menu button-->
          <button
          @click="mobileMenuOpen = !mobileMenuOpen"
          class="inline-flex items-center justify-center p-2 transition duration-150 ease-in-out text-sand-100 hover:text-sand-600 hover:bg-sand-700 focus:outline-none focus:bg-sand-700 focus:text-white" aria-label="Main menu" aria-expanded="false">
            <svg
          :class="{'block': !mobileMenuOpen, 'hidden': mobileMenuOpen }"
          class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg
          :class="{'block': mobileMenuOpen, 'hidden': !mobileMenuOpen }"
          class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex items-center justify-center flex-1 sm:items-stretch sm:justify-start">
          <div class="flex-shrink-0">
            <a href="/">
              <%= image_tag 'Golfsnack_Centrerad_VIT.png', alt: "Golfsnack", class: "block h-10 w-auto" %>
            </a>
          </div>
          <% if current_user %>
            <div class="hidden sm:block sm:ml-6">
              <div class="flex font-mono desktoplinks">
                <%= render partial: 'header/mainlinks', locals: {class_name: 'navlink' }%>
              </div>
            </div>
          <% end %>
        </div>
        <% if current_user %>
          <%= link_to new_post_path do %>
          <button class="flex items-center justify-center w-8 h-8 rounded-full bg-golfsnack-400 focus:outline-none hover:bg-golfsnack-100">
            <svg class="w-4 h-4 fill-current stroke-current text-sand-600 "  xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#b0b0b0" stroke-width="3" stroke-linecap="square" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
          </button>
          <% end %>
          <button class="relative flex items-center justify-center w-8 h-8 ml-4 rounded-full bg-golfsnack-400 focus:outline-none hover:bg-golfsnack-100">
            <svg  class="w-4 h-4 fill-current stroke-current text-sand-600"  xmlns="http://www.w3.org/2000/svg" width="27" height="27" viewBox="0 0 24 24" fill="none" stroke="#b0b0b0" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"><path d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"></path></svg>
          </button>
          <div class="absolute inset-y-0 right-0 flex items-center pr-2 font-mono sm:static sm:inset-auto sm:pr-0">
            <!-- Profile dropdown -->
            <%= render partial: 'header/profile_dropdown'%>
          </div>
        </div>
      </div>
      <div :class="{'block': mobileMenuOpen, 'hidden': !mobileMenuOpen }" class="w-screen sm:hidden">
        <div class="absolute z-50 block w-screen px-2 pt-2 pb-3 font-mono bg-golfsnack-500">
          <%= render partial: 'header/mainlinks', locals: {class_name: 'mobilenavlink' }%>
        </div>
      </div>
    <% end %>
  </nav>
</header>
