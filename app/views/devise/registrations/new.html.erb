<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>Registrera konto</h2>
  <div class="input">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="input">
    <%= f.label :invite_code %>
    <%= f.text_field :invite_code, autocomplete: "invite code" %>
  </div>
  <div class="input">
    <%= f.label :password %>
    <div>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em class="hint">(Minst <%= @minimum_password_length %> tecken)</em>
      <% end %>
    </div>
  </div>
  <div class="input">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="text-sm muted py-12">
    Genom att skapa ett konto förbinder du dig att följa Golfsnacks <%= link_to "användaravtal", user_agreement_path %>
  </div>
  <%= f.submit "Skapa konto"%>
<% end %>
