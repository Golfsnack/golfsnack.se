<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>Logga in</h2>
  <div class="input">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="input">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "Password" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="input">
      <div class="checkbox">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "Kom ihÃ¥g mig" %>
      </div>
    </div>
  <% end %>
  <%= f.submit "Logga in" %>
<% end %>
