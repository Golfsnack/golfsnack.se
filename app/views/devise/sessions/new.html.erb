<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col items-center justify-center w-3/4 py-12 mt-1">
    <div>
      <h2 class="mb-6 text-3xl font-extrabold leading-9 text-center text-white">
        Logga in
      </h2>
    </div>
    <div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900  focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
    </div>
    <div class="-mt-px">
      <%= f.password_field :password, autocomplete: "Password", class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
    </div>
    <div class="flex items-center justify-between mt-6">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <label class="inline-flex items-center">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <span class="ml-2 text-wetsand-200">Kom ih√•g mig</span>
          </label>
        </div>
      <% end %>
    </div>
    <div class="mt-6">
      <%= f.submit "Logga in", class: "w-full flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium text-white bg-rough-600 hover:bg-rough-500 focus:outline-none focus:border-rough-700 focus:shadow-outline-golfsnack active:bg-rough-700 transition duration-150 ease-in-out" %>
    </div>
  </div>
</div>
<% end %>
