<style type="text/css">
  trix-toolbar [data-trix-button-group="file-tools"] {
    display: none;
  }
</style>
<script type="text/javascript">
  document.addEventListener("trix-file-accept", event => {
    event.preventDefault()
  });
</script>
<link href="https://cdn.jsdelivr.net/npm/tom-select@1.1/dist/css/tom-select.css" rel="stylesheet">
<%= form_for @post do |f| %>
  <div class="grid grid-cols-3 gap-12">
    <div class="col-span-2 bg-white p-12 shadow-lg rounded border">
      <div class="flex my-4">
        <%= f.text_field :title, class: "post--title w-full py-4 border-0 bg-golfsnack-100", placeholder: "Golfsnackets rubrik här...", autofocus: true %>
      </div>
      <div class="my-12 control">
        <label class="my-4 font-bold">Golfsnack</label>
        <%= f.rich_text_area :body%>
      </div>
    </div>
    <div class="flex flex-col gap-2">
      <div class="text-center">
        <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6">
          <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          Lägg till bilder
        </a>
      </div>
      <div class="text-center">
        <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6">
          <svg class="w-6 text-center h-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z" />
          </svg>
          Lägg till video
        </a>
      </div>
      <div data-controller="autocomplete">
        <label class="font-bold">
          Tagga bana
        </label>
        <%= f.collection_select :club_id, @clubs, :id, :name, {include_blank: true}, "data-autocomplete-target": "field", placeholder: "Välj en bana..." %>
      </div>
      <div class="text-center">
        <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6">
          <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          Lägg till banreview
        </a>
      </div>
      <div class="text-center">
        <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6">
          <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          Lägg till score
        </a>
      </div>
      <%= f.submit 'SPARA', class: "py-2 mt-2 font-bold text-white rounded-md bg-blue-600 hover:bg-blue-800" %>
    </div>
  </div>
<% end %>
