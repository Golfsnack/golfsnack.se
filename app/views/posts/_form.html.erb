<style type="text/css">
  trix-toolbar [data-trix-button-group="file-tools"] {
    display: none;
  }
</style>
<script type="text/javascript">
  document.addEventListener("trix-file-accept", event => {
    event.preventDefault()
  });
</script>
<div class="p-12 bg-white rounded">
  <%= form_for @post do |f| %>
    <div class="w-full">
      <div class="flex my-4">
        <div class="flex flex-col flex-1 py-4 pr-4">
          <label class="font-bold">Rubrik</label>
          <%= f.text_field :title, class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
        </div>
        <div class="flex flex-col flex-1 py-4">
          <label class="font-bold">Bana</label>
          <%= f.collection_select :club_id, @clubs, :id, :name, {include_blank: true}, { class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" } %>
        </div>
      </div>
      <div class="flex flex-col flex-1 py-4">
        <label class="font-bold">Ingress</label>
        <%= f.text_area :preamble, class: "block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
      </div>
      <div class="my-12 control">
        <label class="my-4 font-bold">Golfsnack</label>
        <%= f.rich_text_area :body, class: "min-h-64 block w-full px-3 py-2 border border-golfsnack-300 placeholder-golfsnack-500 text-golfsnack-900 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 focus:z-10 sm:text-sm sm:leading-5" %>
      </div>
      <div class="flex w-full">
        <div class="text-center">
          <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6 rounded-full text-wetsand-400 group hover:bg-wetsand-800 hover:text-sand-300">
            <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            Lägg till bilder
          </a>
        </div>
        <div class="text-center">
          <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6 rounded-full text-wetsand-400 group hover:bg-wetsand-800 hover:text-sand-300">
            <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            Lägg till score
          </a>
        </div>
        <div class="text-center">
          <a href="#" class="flex items-center p-2 mt-1 text-base font-medium leading-6 rounded-full text-wetsand-400 group hover:bg-wetsand-800 hover:text-sand-300">
            <svg class="w-6 text-center h-7" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor" viewBox="0 0 24 24"><path d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            Lägg till banreview
          </a>
        </div>
        <div class="self-end flex-1">
          <%= f.submit 'POSTA', class: "float-right px-4 py-2 mt-2 font-bold text-white rounded-md bg-blue-600" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
