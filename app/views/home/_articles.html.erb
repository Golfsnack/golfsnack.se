<h2 class="pb-4 my-12 mb-4 font-bold border-b text-golfsnack-800 border-sand-200">Artiklar</h2>
<div class="flex">
  <% @latest_articles.each do |article| %>
    <div class="w-1/3 p-4 bg-white">
      <%= image_tag article.image.variant(resize_to_fill: [1024, 726], gravity: 'center'), class: "w-full" %>
      <%= link_to article.title, article_path(article), class: "block text-xl font-semibold leading-7"%>
      <p class="mt-3 text-base leading-6"><%= truncate(strip_tags(article.body.to_s), length: 300) %></p>
      <%= link_to "Läs artikeln » (#{article.read_minutes} min)", article_path(article), class: "leading-7" %>
    </div>
  <% end %>
</div>
