<div class="grid grid-cols-12 gap-2 my-4" style="min-height: 400px">
  <% article = @latest_articles[0] %>
  <div class="relative col-span-8 p-4 overflow-hidden cover_image" style="background-image:  linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8)), url(<%= url_for article.image %>)">
    <div class="absolute bottom-0 pb-4">
      <%= link_to article.title, article_path(article), class: "block text-3xl font-bold text-white no-underline "%>
      <p class="pr-24 mt-3 text-base leading-6 text-white"><%= truncate(strip_tags(article.body.to_s), length: 200) %></p>
      <%= link_to "Läs artikeln » (#{article.read_minutes} min)", article_path(article), class: "leading-7 text-white no-underline" %>
    </div>
  </div>
  <div class="col-span-4">
    <div class="grid h-full grid-rows-2 gap-2 auto-rows-max">
      <% @latest_articles[1..3].each do |article| %>
        <a href="<%= url_for article %>" class="relative p-4 cover_image" style="background-image:  linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.6)), url(<%= url_for article.image %>)">
          <div class="absolute bottom-0 block pb-4 text-2xl font-bold text-white no-underline">
            <%= article.title %>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
