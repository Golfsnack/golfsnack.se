<% if activity_resources_exist?(activity) && activity.trackable.followable %>
  <div id="activity-<%= activity.id %>" class="activity">
    <div class="activity-follow">
      <div class="flex">
        <%= render 'shared/avatar', user: activity.owner %>
        &rarr;
        <%= render 'shared/avatar', user: activity.trackable.followable %>
      </div>
      <%= link_to activity.owner.first_name, user_path(activity.owner) %>
      <span class="text-golfsnack-400">började följa</span>
      <%= link_to activity.trackable.followable.first_name, user_path(activity.trackable.followable) %>
      <br />
  <span class="text-xs text-golfsnack-400"><%= render 'shared/created_at', activity: activity %></span>
</div>
</div>
<% end %>
