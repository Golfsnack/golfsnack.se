<h2 class="pb-4 my-12 mb-4 font-bold border-b text-golfsnack-800 border-sand-200">Rundor</h2>
<table class="min-w-full divide-y divide-sand-200">
  <thead>
    <tr>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Bana
      </th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-sand-200">
    <% @user.rounds.each do |round| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= link_to club_path(round.club) do %>
            <div class="flex flex-row">
              <% if round.club.logo.attached? %>
                <%= image_tag round.club.logo, class: 'small-avatar mr-2' %>
              <% else %>
                <%= image_tag "fallback/avatar-thumb-default.png", class: 'small-avatar mr-2' %>
              <% end %>
              <%= round.club.name %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
