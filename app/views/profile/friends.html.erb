<h2 class="my-12 pb-4 mb-4 font-bold border-b text-golfsnack-800 border-sand-200">Vänner</h2>
<table class="min-w-full divide-y divide-sand-200">
  <thead>
    <tr>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Namn
      </th>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
      </th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-sand-200">
    <% @user.friendships.each do |friendship| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= link_to user_path(friendship.friend) do %>
            <div class="flex flex-row">
              <img class="w-5 h-5 mr-2" src="<%=friendship.friend.avatar_url(:thumb)%>" alt="" />
              <%= friendship.friend.name %>
            </div>
          <% end %>
        </td>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= link_to "Sluta följ", friendship, method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2 class="my-12 pb-4 mb-4 font-bold border-b text-golfsnack-800 border-sand-200">Följare du inte följer</h2>
<table class="min-w-full divide-y divide-sand-200">
  <thead>
    <tr>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
        Namn
      </th>
      <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left uppercase bg-sand-50">
      </th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-sand-200">
    <% @user.inverse_friends.each do |user| %>
      <tr>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= user.name %>
          <%= link_to user_path(user) do %>
            <div class="flex flex-row">
              <img class="w-5 h-5 mr-2" src="<%=user.avatar_url(:thumb)%>" alt="" />
              <%= user.name %>
            </div>
          <% end %>
        </td>
        <td class="px-6 py-4 whitespace-no-wrap">
          <%= link_to "Följ", friendships_path(friend_id: @user.id), method: :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
