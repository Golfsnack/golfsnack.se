<div class="p-6 my-6 bg-white">
  <div class="lg:flex lg:items-center lg:justify-between">
    <div class="flex-1 min-w-0">
      <img alt="..." src="<%=@user.avatar_url(:thumb)%>" class="h-auto border-none shadow-xl" style="max-width: 100px"/>
      <h2 class="text-2xl font-bold leading-7 text-sand-900 sm:text-3xl sm:leading-9 sm:truncate">
        <%= @user.name %>
      </h2>
      <div class="flex flex-col mt-1 sm:mt-0 sm:flex-row sm:flex-wrap">
        <div class="flex items-center mt-2 text-sm leading-5 text-golfsnack-500 sm:mr-6"><%= @user.points%> po√§ng</div>
        <% if @user.badges.empty? %>
          <div class="flex items-center mt-2 text-sm leading-5 text-sand-500 sm:mr-6">No badge yet.</div>
        <% else %>
          <% @user.badges.each do |badge| %>
            <div class="flex inline-block px-2 py-1 mt-2 mr-1 text-sm font-semibold leading-5 uppercase rounded text-sand-100 bg-rough-500 last:mr-0 sm:mr-6">
              <%= badge.name %>
            </div>
          <% end %>
        <% end %>
        <div class="flex items-center mt-2 text-sm leading-5 text-sand-500 sm:mr-6">
          <!-- Heroicon name: currency-dollar -->
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-sand-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
          </svg>
          <%= @user.golf_id %>
        </div>
        <div class="flex items-center mt-2 text-sm leading-5 text-sand-500">
          <!-- Heroicon name: calendar -->
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-sand-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          Medlem sen <%= @user.created_at.strftime("%-d %b %Y") %>
        </div>
      </div>
    </div>
    <div class="flex mt-5 lg:mt-0 lg:ml-4">
      <% if is_current_user? @user %>
        <span class="shadow-sm">
          <a href="/users/edit" type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium leading-5 transition duration-150 ease-in-out bg-white border text-sand-700 border-sand-300 hover:text-sand-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:text-sand-800 active:bg-sand-50">
            <!-- Heroicon name: pencil -->
            <svg class="w-5 h-5 mr-2 -ml-1 text-sand-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            Redigera
          </a>
        </span>
      <% else %>
        <span class="hidden ml-3 shadow-sm sm:block">
          <button type="button" class="inline-flex items-center px-4 py-2 text-sm font-medium leading-5 transition duration-150 ease-in-out bg-white border text-sand-700 border-sand-300 hover:text-sand-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:text-sand-800 active:bg-sand-50">
            <!-- Heroicon name: link -->
            <svg class="w-5 h-5 mr-2 -ml-1 text-sand-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
            </svg>
            <%= render partial: 'follows/form' %>
          </button>
        </span>
      <% end %>
    </div>
  </div>
</div>
<% if is_current_user? @user %>
  <%= render partial: 'home/blogs' %>
<% end %>
