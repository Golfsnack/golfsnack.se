<%
numbers = %w(50 100 200 300 400 500 600 700 800 900)
names = %w(golfsnack rough fairway sand wetsand blue yellow red)
%>


<% names.each do |name| %>
  <% numbers.each do |number|%>
    <%= ".bg-#{name}-#{number} { background-color: var(--#{name}-#{number}); }"%>
    <%= ".text-#{name}-#{number} { color: var(--#{name}-#{number}); }"%>
    <%= ".border-#{name}-#{number} { border-color: var(--#{name}-#{number}); }"%>
    <%= ".hover:bg-#{name}-#{number} { &:hover { background-color: var(--#{name}-#{number}); } }"%>
  <% end%>
<% end %>
